{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cinema</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <p>Films</p>
    <ul>
        {% for film in films %}
            <li>{{ film.titre }}</li>
        {% endfor %}
    </ul>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cinema') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cinema_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
